{
  "name": "sc-pipeline",
  "description": "Supplier/Material/Plant streaming to Bronze + AlloyDB upserts",
  "parameters": [
    {"name":"project",            "label":"Project",               "helpText":"GCP project ID",                                   "isOptional":false},
    {"name":"region",             "label":"Region",                "helpText":"Dataflow region, e.g. us-central1",                 "isOptional":false, "default":"us-central1"},
    {"name":"supplier_sub",       "label":"Supplier subscription", "helpText":"Pub/Sub subscription for supplier events",          "isOptional":false},
    {"name":"material_sub",       "label":"Material subscription", "helpText":"Pub/Sub subscription for material events",          "isOptional":false},
    {"name":"plant_sub",          "label":"Plant subscription",    "helpText":"Pub/Sub subscription for plant events",             "isOptional":false},
    {"name":"redis_host",         "label":"Redis host",            "helpText":"Memorystore Redis hostname (no port)",              "isOptional":false},
    {"name":"id_service_url",     "label":"ID service URL (/id)",  "helpText":"Authenticated Cloud Run URL for the ID mint API",   "isOptional":false},
    {"name":"bq_supplier_bronze", "label":"BQ supplier bronze",    "helpText":"BigQuery table <project>:domain_bronze.supplier_bronze",  "isOptional":false},
    {"name":"bq_material_bronze", "label":"BQ material bronze",    "helpText":"BigQuery table <project>:domain_bronze.material_bronze",  "isOptional":false},
    {"name":"bq_plant_bronze",    "label":"BQ plant bronze",       "helpText":"BigQuery table <project>:domain_bronze.plant_bronze",     "isOptional":false},
    {"name":"bq_supplier_dlq",    "label":"BQ supplier DLQ",       "helpText":"BigQuery table for supplier DLQ",                   "isOptional":false},
    {"name":"bq_material_dlq",    "label":"BQ material DLQ",       "helpText":"BigQuery table for material DLQ",                   "isOptional":false},
    {"name":"bq_plant_dlq",       "label":"BQ plant DLQ",          "helpText":"BigQuery table for plant DLQ",                      "isOptional":false},
    {"name":"gcs_temp",           "label":"BQ temp GCS path",      "helpText":"GCS path used by BigQuery IO for temporary files",  "isOptional":false},
    {"name":"adb_host",           "label":"AlloyDB host",          "helpText":"AlloyDB primary instance IP/host",                  "isOptional":false},
    {"name":"adb_port",           "label":"AlloyDB port",          "helpText":"AlloyDB port (usually 5432)",                       "isOptional":true,  "default":"5432"},
    {"name":"adb_user",           "label":"AlloyDB user",          "helpText":"AlloyDB username",                                  "isOptional":false},
    {"name":"adb_password",       "label":"AlloyDB password",      "helpText":"AlloyDB password (you may pass a Secret)",          "isOptional":false},
    {"name":"adb_db",             "label":"AlloyDB database",      "helpText":"AlloyDB database name",                             "isOptional":true,  "default":"supplychain"}
  ]
}
